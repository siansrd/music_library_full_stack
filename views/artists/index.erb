

<h3>All the Artists</h3>
  <hr>

<!-- Sorts Artists -->
    <% sorted_artists = @artists.sort { | a,b | a.name <=> b.name } %>
<!-- Prints Each Artist -->
    <% sorted_artists.each do |artist| %>
<!-- Prints Edit Artist Button -->
      <p>Artist: <b><%= artist.name %></b> [<a href="/artists/<%= artist.id %>/edit">Edit</a>]</p>
  <!-- Print all albums associted with each artist -->
      <% albums_array = artist.albums() %>
      <% albums_array.each do |album| %>
        <p>Album: <b><%= album.name %></b></p>
      <% end %>
    <hr>
    <% end %>
